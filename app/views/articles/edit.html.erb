<div class="container" style="width: 800px;">
  <%= form_for @article do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control', rows: 10 %>
    </div>

    <%= f.submit 'Update', class: 'btn btn-primary' %>
  <% end %>
</div>
